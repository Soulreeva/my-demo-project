{
  "name": "demo-project",
  "version": "0.1.0",
  "author": {
    "name": "Chris Cardwell"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "backend",
      "frontend",
      "client-shared",
      "types"
    ]
  },
  "scripts": {
    "prestart": "docker-compose up -d && yarn build:packages && yarn build:types && npm run migration:run",
    "build": "yarn build:fast",
    "build:fast": "lerna run build --scope=ess --scope=frontend --scope=backend",
    "build:types": "lerna run build --scope=types",
    "build:shared": "lerna run build --scope=client-shared",
    "lerna": "lerna"
  },
  "devDependencies": {
    "@types/sanitize-html": "2.13.0",
    "lerna": "^8.1.8"
  },
  "resolutions": {
    "rxjs": "^7.8.1",
    "faker": "6.6.6",
    "react": "^18.0.0",
    "@types/react": "^18.0.0",
    "react-error-overlay": "6.0.11",
    "@nestjs/typeorm": "10.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "api",
    "testRegex": ".(e2e-spec|spec).ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "^.+\\.js$"
    ],
    "moduleDirectories": [
      "node_modules",
      "packages",
      "src"
    ],
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "packageManager": "yarn@3.6.3",
  "dependencies": {
    "ts-node": "^10.8.1",
    "typescript": "^4.9.5"
  }
}
